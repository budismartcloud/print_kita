<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="@Url.Content("~/Content/backend/bootstrap/css/bootstrap.min.css") ">
    <link rel="stylesheet" href="@Url.Content("~/Content/backend/plugins/font-awesome/css/font-awesome.min.css") ">
    <link rel="stylesheet" href=" @Url.Content("~/Content/backend/dist/css/AdminLTE.min.css") ">
    <link rel="stylesheet" href=" @Url.Content("~/Content/backend/dist/css/skins/_all-skins.min.css") ">
    <link rel="stylesheet" href=" @Url.Content("~/Content/backend/plugins/datepicker/datepicker3.css") ">
    <link rel="stylesheet" href=" @Url.Content("~/Content/backend/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css") ">
    <link rel="stylesheet" href=" @Url.Content("~/Content/core/ajax.css") ">

    <script src="@Url.Content("~/Content/backend/plugins/jQuery/jQuery-2.1.4.min.js") "></script>
    <script src="@Url.Content("~/Content/backend/dist/js/jquery-ui.min.js") "></script>
    <script src="@Url.Content("~/Content/backend/plugins/morris/morris.min.js") "></script>
    <script src="@Url.Content("~/Content/backend/plugins/sparkline/jquery.sparkline.min.js") "></script>
    <script src="@Url.Content("~/Content/backend/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js") "></script>
    <script src="@Url.Content("~/Content/backend/plugins/jvectormap/jquery-jvectormap-world-mill-en.js") "></script>
    <script src="@Url.Content("~/Content/backend/plugins/knob/jquery.knob.js") "></script>
    <script src="@Url.Content("~/Content/backend/plugins/datepicker/bootstrap-datepicker.js") "></script>
    <script src="@Url.Content("~/Content/backend/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js") "></script>
    <script src="@Url.Content("~/Content/backend/plugins/slimScroll/jquery.slimscroll.min.js") "></script>
    <script src="@Url.Content("~/Content/backend/plugins/fastclick/fastclick.min.js") "></script>
    <script src="@Url.Content("~/Content/backend/dist/js/app.min.js") "></script>
    <script src="@Url.Content("~/Content/core/core.js") "></script>
    <script>
        function logoutApplication() {
            var data = new FormData();
            modalConfirm('Konfirmasi', 'Apakah anda yakin akan keluar dari applikasi?', function () {
                ajaxTransfer('/Login/Logout', data, function (result) {
                    $('#modal-output').html("<div class='alert alert-success'>Logout berhasil</div>");
                });
                reload(1500);
            });
        }
    </script>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
   


</head>
<body class="skin-black fixed sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a href="#" class="logo">
                <span class="logo-mini"><b></b>PK</span>
                <span class="logo-lg" style="text-align: left">
                    <img src="@Url.Content("~/Content/img/logo.png") "" width="80" height="40">
                </span>
            </a>
            <nav class="navbar navbar-static-top" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="@Url.Content("~/Content/backend/dist/img/avatar5.png") " class="user-image"
                                     alt="User Image">

                                    <span class="hidden-xs">@Session["activeUserName"]</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="user-header">
                                        <img src="@Url.Content("~/Content/backend/dist/img/avatar5.png") " class="img-circle"
                                             alt="User Image">

                                            <p>
                                                <small>@Session["activeUserName"]</small>
                                            </p>
                                        </li>
                                        <li class="user-footer">
                                            <div class="pull-left">
                                                <a href="#" class="btn btn-default btn-flat">Profil</a>
                                            </div>
                                            <div class="pull-right">
                                                <a onclick="logoutApplication()" class="btn btn-default btn-flat">Keluar</a>
                                            </div>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </header>
                <aside class="main-sidebar">
                    <section class="sidebar">
                        <div class="user-panel">
                            <div class="pull-left image">
                                <img src="@Url.Content("~/Content/backend/dist/img/avatar5.png") " class="img-circle"
                                     alt="User Image">
                                </div>
                                <div class="pull-left info">
                                    <p>@Session["activeUserName"]</p>
                                    <a href="#">
                                        <i>
                                            @Session["activeUserRoleName"]

                                        </i>

                                    </a>
                                </div>
                            </div>
                            
                            <!--Untuk load menu-->
                            <ul class="sidebar-menu">
                                <li class="header">MAIN NAVIGATION</li>
                                <li class="treeview">
                                    <a href="@Url.Action("Index", "Home")">
                                        <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                                    </a>
                                </li>
                                
                                <li class="treeview">
                                    <a>
                                        <i class="fa fa-paperclip"></i>
                                        <span>Data Pesanan</span>
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </a>
                                    <ul class="treeview-menu">
                                        <li>
                                            <a href="@Url.Action("Index", "Role")">
                                                <i class="fa fa-circle-o"></i> Menunggu Diproses
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Index", "Role")">
                                                <i class="fa fa-circle-o"></i> Selesai Diproses
                                            </a>
                                        </li>
                                    </ul>

                                </li>
                                <li class="treeview">
                                    <a onclick="logoutApplication()">
                                        <i class="fa fa-sign-out"></i> <span>Logout</span>
                                    </a>
                                </li>
                            </ul>

                        </section>
                    </aside>

                    <div class="content-wrapper">
                        <section class="content">
                            <div class="row">
                                <div class='col-md-12'>
                                    <div class="box box-default">
                                        <div class="box-header">
                                            <h3 class="box-title">
                                                @ViewBag.Title
                                            </h3>
                                        </div>
                                        <div id="main-content" class="box-body">
                                            @RenderBody()
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </section>
                    </div>
                    <footer class="main-footer">
                        <div class="pull-right hidden-xs">
                            <b>Version</b> 1.0.0
                        </div>
                        <strong>&copy; @DateTime.Now.Year - My ASP.NET Application</strong>
                    </footer>
                </div>
</body>        
</html>
